{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json && node scripts/postbuild.cjs",
    "start": "pnpm db:push && node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:runtime": "drizzle-kit push --config drizzle.config.cjs",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "swagger:export": "tsx src/scripts/export-swagger.ts",
    "swagger:export:dist": "tsx src/scripts/export-swagger.ts ./dist/swagger.json",
    "docker:build": "docker build -t lnq-backend:latest .",
    "docker:build:ghcr": "tsx scripts/docker-build-ghcr.ts",
    "docker:btp": "pnpm docker:build:ghcr && pnpm docker:push:ghcr",
    "docker:push:ghcr": "tsx scripts/docker-push-ghcr.ts",
    "docker:run": "docker run --env-file .env -p 3000:3000 lnq-backend:latest",
    "docker:clean": "docker rmi lnq-backend:latest",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "compose:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "compose:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "compose:prod:build": "docker-compose -f docker-compose.prod.yml build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.4"
  }
}
