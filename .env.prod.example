# Production Environment Configuration
# Copy this file to .env.prod and update with your values

# Database Configuration
DB_USER=produser
DB_PASSWORD=your_secure_password_here
DB_NAME=ecommerce_prod
DB_PORT=5432

# Database hostname as seen from the backend container.
# - When using docker-compose.prod.yml: use postgres
# - When running backend separately: set to your DB host/IP
DB_HOST=postgres

# Server Configuration
PORT=3000
NODE_ENV=production
API_PORT=3000

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_BUCKET_NAME=images
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# GitHub Container Registry
GHCR_OWNER=aspectxlol
IMAGE_TAG=latest
